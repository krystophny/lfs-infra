# /etc/fstab - LFS filesystem table
# <device>  <mount>  <type>  <options>  <dump>  <pass>

# Root filesystem (adjust device as needed)
/dev/sda2       /               ext4    defaults,noatime        1 1

# EFI System Partition (if using UEFI)
/dev/sda1       /boot/efi       vfat    defaults,noatime        0 2

# Tmpfs for /tmp (90% of RAM - with 96GB, no swap needed)
tmpfs           /tmp            tmpfs   defaults,nosuid,nodev,size=90%  0 0

# Tmpfs for /run
tmpfs           /run            tmpfs   defaults,nosuid,nodev,mode=755  0 0

# devpts for pseudo-terminals
devpts          /dev/pts        devpts  gid=5,mode=620          0 0

# procfs
proc            /proc           proc    defaults                0 0

# sysfs
sysfs           /sys            sysfs   defaults                0 0
